# Investment Management System - Development Environment

# Application
NODE_ENV=development
PORT=3001
APP_NAME=Investment Management System
APP_VERSION=1.0.0

# Database
# Local MongoDB (when available)
# MONGODB_URI=mongodb://localhost:27017/investment_management

# MongoDB Atlas (Cloud) - Replace with your connection string
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/investment_management?retryWrites=true&w=majority

# Current setting (local)
MONGODB_URI=mongodb://localhost:27017/investment_management

# Authentication
JWT_SECRET=investment-management-jwt-secret-key-development-32-chars-minimum
JWT_REFRESH_SECRET=investment-management-refresh-secret-key-development-32-chars-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@investmentmanagement.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# WebSocket
WS_PORT=9001

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Feature Flags
FEATURE_2FA=false
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true

FRONTEND_URL=http://localhost:5173
