# Investment Management System - Production Environment
# IMPORTANT: Update all placeholder values with secure production values

# Application
NODE_ENV=production
APP_NAME=Investment Management System
APP_VERSION=1.0.0
PORT=3001
HOST=0.0.0.0

# Database - Production MongoDB
MONGODB_URI=mongodb://localhost:27017/investment_management_prod

# Authentication - CRITICAL: Generate secure secrets for production
JWT_SECRET=GENERATE_SECURE_32_CHAR_MINIMUM_JWT_SECRET_FOR_PRODUCTION_USE
JWT_REFRESH_SECRET=GENERATE_SECURE_32_CHAR_MINIMUM_REFRESH_SECRET_FOR_PRODUCTION_USE
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=14

# Security & CORS - Production Domains
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
TRUST_PROXY=1

# Rate Limiting - Stricter for production
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=50
RATE_LIMIT_STRICT=true

# File Upload - Production Limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Email Configuration - Production SMTP
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=YOUR_PRODUCTION_EMAIL_PASSWORD
SMTP_FROM=noreply@yourdomain.com

# Logging - Production Settings
LOG_LEVEL=warn
LOG_FILE=./logs/production.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Headers
SECURITY_HEADERS=true
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=true

# SSL/TLS - Production
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Feature Flags - Production
FEATURE_2FA=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_AUDIT_LOGGING=true
FEATURE_RATE_LIMITING=true
FEATURE_DEBUG_MODE=false
FEATURE_API_DOCS=false

# Frontend URL - Production
FRONTEND_URL=https://yourdomain.com

# Session Management - Production
SESSION_SECRET=GENERATE_SECURE_SESSION_SECRET_FOR_PRODUCTION_USE
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Error Handling - Production
ERROR_STACK_TRACE=false
ERROR_DETAILS=false

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
PERFORMANCE_MONITORING=true
